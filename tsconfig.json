{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "preserve",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "~components/*": ["components/*"],
      "~pages/*": ["pages/*"],
      "~assets/*": ["assets/*"],
      "~styles/*": ["lib/styles/*"],
      "~utils/*": ["lib/utils/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
